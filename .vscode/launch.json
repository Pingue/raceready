{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "raceready",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "python": "${workspaceFolder}/venv/bin/python", // Path to the Python interpreter of your venv
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1",
                "DB_PATH": "${workspaceFolder}/data/db.sqlite3"
            },
            "args": [
                "run",
                "--port=5002",
                "--host=0.0.0.0"
            ],
            "jinja": true
        }
    ]
}